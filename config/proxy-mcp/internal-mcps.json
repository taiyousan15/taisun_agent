{
  "$schema": "./internal-mcps.schema.json",
  "version": "1.0.0",
  "mcps": [
    {
      "name": "github",
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-server-github"
      ],
      "enabled": false,
      "tags": [
        "vcs",
        "code",
        "issues",
        "pr",
        "repository"
      ],
      "shortDescription": "GitHub operations: repos, issues, PRs, code search",
      "dangerousOperations": [
        "delete",
        "force-push",
        "archive"
      ]
    },
    {
      "name": "notion",
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-server-notion"
      ],
      "enabled": false,
      "tags": [
        "docs",
        "wiki",
        "database",
        "notes"
      ],
      "shortDescription": "Notion pages and databases: read, create, update",
      "dangerousOperations": [
        "delete",
        "archive"
      ]
    },
    {
      "name": "postgres",
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-server-postgres"
      ],
      "enabled": false,
      "tags": [
        "database",
        "sql",
        "query",
        "data"
      ],
      "shortDescription": "PostgreSQL queries and schema operations",
      "dangerousOperations": [
        "drop",
        "truncate",
        "delete",
        "alter"
      ]
    },
    {
      "name": "filesystem",
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-server-filesystem"
      ],
      "enabled": false,
      "tags": [
        "files",
        "read",
        "write",
        "directory"
      ],
      "shortDescription": "Local filesystem: read, write, list files",
      "dangerousOperations": [
        "delete",
        "overwrite"
      ]
    },
    {
      "name": "chrome",
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-server-puppeteer"
      ],
      "enabled": true,
      "tags": [
        "browser",
        "web",
        "automation",
        "scrape",
        "dom",
        "url",
        "links",
        "page"
      ],
      "shortDescription": "Browser automation: navigate, click, extract DOM",
      "dangerousOperations": [
        "login",
        "submit-form",
        "payment",
        "captcha-bypass",
        "download-file"
      ],
      "captchaGuardrails": {
        "detectPatterns": ["captcha", "recaptcha", "cloudflare", "verify you are human", "i'm not a robot"],
        "action": "require_human",
        "message": "CAPTCHA detected. Manual intervention required."
      }
    },
    {
      "name": "slack",
      "transport": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@anthropic/mcp-server-slack"
      ],
      "enabled": false,
      "tags": [
        "chat",
        "messaging",
        "notification",
        "team"
      ],
      "shortDescription": "Slack: send messages, read channels, manage threads",
      "dangerousOperations": [
        "delete-message",
        "archive-channel"
      ]
    }
  ],
  "routerConfig": {
    "ruleFirst": true,
    "semanticThreshold": 0.7,
    "topK": 5,
    "fallback": "require_human_or_clarify"
  }
}
