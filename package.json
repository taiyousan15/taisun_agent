{
  "name": "taisun-v2",
  "version": "2.0.0",
  "description": "Unified Development System - World-class system development platform",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:agents": "jest --selectProjects integration --testPathPattern=agents.integration",
    "test:skills": "jest --selectProjects integration --testPathPattern=skills.integration",
    "test:mcp": "jest --selectProjects integration --testPathPattern=mcp.integration",
    "test:memory": "jest --selectProjects integration --testPathPattern=memory.integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "typecheck": "tsc --noEmit",
    "security:scan": "trivy fs --severity HIGH,CRITICAL .",
    "docs:generate": "typedoc src/",
    "memory:update": "node scripts/update-memory-stats.js",
    "memory:report": "npx ts-node scripts/memory-report.ts",
    "memory:report:summary": "npx ts-node scripts/memory-report.ts summary",
    "memory:report:detailed": "npx ts-node scripts/memory-report.ts detailed",
    "memory:report:trends": "npx ts-node scripts/memory-report.ts trends",
    "memory:report:errors": "npx ts-node scripts/memory-report.ts errors",
    "memory:export": "npx ts-node scripts/memory-report.ts export",
    "memory:backup": "npx ts-node scripts/memory-report.ts backup",
    "agents:list": "node scripts/list-agents.js",
    "skills:list": "node scripts/list-skills.js"
  },
  "keywords": [
    "ai",
    "agents",
    "development",
    "automation",
    "claude",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "supertest": "^7.1.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.28.15",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
