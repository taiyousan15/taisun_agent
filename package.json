{
  "name": "taisun-v2",
  "version": "2.1.0",
  "description": "Unified Development System - World-class system development platform with OpenCode/OMO integration",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:silent": "jest --silent --noStackTrace",
    "test:summary": "jest --verbose=false --noStackTrace 2>&1 | tail -20",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:agents": "jest --selectProjects integration --testPathPattern=agents.integration",
    "test:skills": "jest --selectProjects integration --testPathPattern=skills.integration",
    "test:mcp": "jest --selectProjects integration --testPathPattern=mcp.integration",
    "test:memory": "jest --selectProjects integration --testPathPattern=memory.integration",
    "test:performance": "jest --selectProjects integration --testPathPattern=performance.integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "check:unicode": "node scripts/check-hidden-unicode.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "typecheck": "tsc --noEmit",
    "security:scan": "trivy fs --severity HIGH,CRITICAL .",
    "docs:generate": "typedoc src/",
    "memory:update": "node scripts/update-memory-stats.js",
    "memory:report": "npx ts-node scripts/memory-report.ts",
    "memory:report:summary": "npx ts-node scripts/memory-report.ts summary",
    "memory:report:detailed": "npx ts-node scripts/memory-report.ts detailed",
    "memory:report:trends": "npx ts-node scripts/memory-report.ts trends",
    "memory:report:errors": "npx ts-node scripts/memory-report.ts errors",
    "memory:export": "npx ts-node scripts/memory-report.ts export",
    "memory:backup": "npx ts-node scripts/memory-report.ts backup",
    "perf:report": "npx ts-node scripts/performance-report.ts",
    "perf:metrics": "npx ts-node scripts/performance-report.ts metrics",
    "perf:recommend": "npx ts-node scripts/performance-report.ts recommend",
    "perf:benchmark": "npx ts-node scripts/run-benchmarks.ts",
    "perf:benchmark:json": "npx ts-node scripts/run-benchmarks.ts --format=json --output=benchmark-results.json",
    "agents:list": "node scripts/list-agents.js",
    "skills:list": "node scripts/list-skills.js",
    "postinstall": "npm run build:all || echo 'Build failed but continuing...'",
    "build:all": "npm run proxy:build && npm run scripts:build",
    "build:windows": "npm run proxy:build & npm run scripts:build",
    "proxy:start": "npx ts-node src/proxy-mcp/server.ts",
    "proxy:build": "tsc --project tsconfig.proxy.json",
    "scripts:build": "tsc --project tsconfig.scripts.json",
    "proxy:smoke": "node scripts/proxy-smoke.js",
    "internal-mcp:rollout": "node dist/proxy-mcp/internal/rollout-cli.js",
    "obs:report:daily": "node dist/proxy-mcp/observability/report-cli.js --period 24h",
    "obs:report:weekly": "node dist/proxy-mcp/observability/report-cli.js --period 7d",
    "obs:post:daily": "node dist/proxy-mcp/observability/report-cli.js --period 24h --post",
    "obs:post:weekly": "node dist/proxy-mcp/observability/report-cli.js --period 7d --post",
    "chrome:debug:start": "node dist/proxy-mcp/browser/cdp/chrome-debug-cli.js",
    "chrome:cdp:smoke": "node dist/proxy-mcp/browser/cdp/cdp-smoke-cli.js",
    "ops:schedule:run": "node dist/scripts/ops/schedule-runner.js",
    "ops:schedule:loop": "node dist/scripts/ops/schedule-runner.js --loop",
    "ops:schedule:status": "node dist/scripts/ops/schedule-runner.js --status",
    "security:secrets-scan": "npx gitleaks detect --source . --verbose",
    "doctor": "npx ts-node src/utils/env-check.ts",
    "briefing": "npx ts-node scripts/session-briefing.ts",
    "briefing:sync": "npx ts-node scripts/session-briefing.ts --sync",
    "contract:lint": "npx ts-node scripts/contract-lint.ts",
    "mistake:testgen": "npx ts-node scripts/mistake-to-test.ts",
    "text:safe-replace": "npx ts-node scripts/text/safe-replace.ts",
    "text:utf8-guard": "npx ts-node scripts/text/utf8-guard.ts",
    "quality:encoding": "npx ts-node scripts/text/utf8-guard.ts",
    "quality:check": "npm run contract:lint && npm run quality:encoding && npm test",
    "mcp:health": "node scripts/mcp-health-check.js",
    "setup:windows": "node scripts/setup-windows.js"
  },
  "keywords": [
    "ai",
    "agents",
    "development",
    "automation",
    "claude",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@langchain/core": "^1.1.8",
    "@langchain/langgraph": "^1.0.7",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "supertest": "^7.1.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "playwright-core": "^1.57.0",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
